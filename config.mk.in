PYTHON=@PYTHON@

#
# Compilers, for compiling without MPI
# these compilers must be the same or compatible with
# the mpi compilers
#
CXX=@CXX@
CC=@CC@
FC=@FC@
GFORTRAN_VERSION=@GFORTRAN_VERSION@

#
# Default flags, append to these in the makefiles
#
CXXFLAGS=@CXXFLAGS@
CFLAGS=@CFLAGS@
FCFLAGS=@FCFLAGS@

#
# MPI Compilers
#
MPI_ENABLED=@WITH_MPI@
MPICXX=@MPICXX@
MPICC=@MPICC@
MPIFC=@MPIFC@

#
# Java
#
JNI_INCLUDES=@JNI_INCLUDES@
JDK=@JDK@

#
# OpenMP
#

OPENMP_ENABLED=@HAVE_OPENMP@
OPENMP_FCFLAGS=@OPENMP_FCFLAGS@
OPENMP_CFLAGS=@OPENMP_CFLAGS@
    
#
# Libraries: FFTW, GSL, HDF5, CUDA, SAPPORO
#

FOUND_FFTW=@FOUND_FFTW@
FFTW_FLAGS=@FFTW_FLAGS@
FFTW_LIBS=@FFTW_LIBS@
    
FOUND_GSL=@FOUND_GSL@
GSL_FLAGS=@GSL_FLAGS@
GSL_LIBS=@GSL_LIBS@

HDF5_FLAGS=@HDF5_FLAGS@
HDF5_LIBS=@HDF5_LIBS@

CUDA_ENABLED=@WITH_CUDA@
NVCC=@NVCC@
CUDA_TK=@CUDA_TK@
CUDA_SDK=@CUDA_SDK@
CUDA_LIBS=@CUDA_LIBS@

SAPPORO_VERSION=@SAPPORO_VERSION@
SAPPORO_LIBS=-L${AMUSE_DIR}/lib/sapporo_${SAPPORO_VERSION} -lsapporo


export PYTHON CXX CC FC CXXFLAGS CFLAGS FCFLAGS MPICXX MPICC MPIFC
export JNI_INCLUDES JDK
export FFTW_FLAGS FFTW_LIBS
export GSL_FLAGS GSL_LIBS
export HDF5_FLAGS HDF5_LIBS
export NVCC CUDA_TK CUDA_SDK CUDA_LIBS CUDA_ENABLED
export SAPPORO_VERSION SAPPORO_LIBS

